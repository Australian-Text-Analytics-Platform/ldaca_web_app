# Environment Configuration for LDaCA Web App Backend
# Copy this file to .env and modify the values as needed

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/users.db
DATABASE_BACKUP_FOLDER=./data/backups

# Data Folders
USER_DATA_FOLDER=./data
SAMPLE_DATA_FOLDER=./data/sample_data

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
DEBUG=false

# CORS Configuration
CORS_ALLOWED_ORIGINS_STR=http://localhost:3000,https://ldaca.sguo.org,https://sguo0589.github.io
CORS_ALLOW_CREDENTIALS=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here

# Security Configuration
TOKEN_EXPIRE_HOURS=24
SECRET_KEY=your-secret-key-here-change-this-in-production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Oni API key
ONI_API_KEY=your-oni-api-key-here
