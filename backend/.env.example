# Environment Configuration for LDaCA Web App Backend

# Data root (all data paths are relative to this)
DATA_ROOT=data

# Database Configuration (DATABASE_URL optional; if omitted, DB path = DATA_ROOT/DATABASE_FILE)
# DATABASE_URL=sqlite+aiosqlite:///.data/users.db
DATABASE_FILE=users.db
DATABASE_BACKUP_FOLDER=backups

# Data Folders (relative to DATA_ROOT)
USER_DATA_FOLDER=users
SAMPLE_DATA_FOLDER=sample_data

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
DEBUG=false

# CORS Configuration
CORS_ALLOWED_ORIGINS_STR=http://localhost:3000,http://127.0.0.1:3000,https://ldaca.sguo.org,https://sguo0589.github.io
CORS_ALLOW_CREDENTIALS=true

# Authentication Configuration
# Multi-user mode: true = require Google OAuth, false = single root user
MULTI_USER=false

# Single user configuration (when MULTI_USER=false)
SINGLE_USER_ID=root
SINGLE_USER_NAME=Root User
SINGLE_USER_EMAIL=root@localhost

# Google OAuth Configuration (when MULTI_USER=true)
GOOGLE_CLIENT_ID=your-google-client-id-here

# Security Configuration
TOKEN_EXPIRE_HOURS=24
SECRET_KEY=your-secret-key-here

# Oni API key
ONI_API_KEY=your-oni-api-key-here

# Feedback configuration (provide real values in your local .env)
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=
AIRTABLE_TABLE_ID=
AIRTABLE_FIELD_REPLY_TO_ID=
AIRTABLE_FIELD_SUBJECT_ID=
AIRTABLE_FIELD_COMMENTS_ID=
